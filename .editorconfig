root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.java]
indent_size = 2
max_line_length = 80

[*.py]
indent_size = 4
max_line_length = 120

[*.{js,jsx,ts,tsx}]
indent_size = 2
max_line_length = 120

[*.sql]
indent_size = 4
max_line_length = off

[*.xml]
indent_size = 2

[*.{yaml,yml}]
indent_size = 2

[*.{json,jsonc}]
max_line_length = 120

[*.md]
indent_size = 3
max_line_length = off

[*.sh]
indent_size = 4
max_line_length = off

[.bash*]
indent_size = 4

[Makefile]
indent_size = 4
indent_style = tab
max_line_length = off
