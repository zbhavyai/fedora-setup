{
  // EDITOR -------------------------------------------------------------------
  "editor.codeActionsOnSave": { "source.organizeImports": "explicit" },
  "editor.formatOnSave": true,
  "files.trimTrailingWhitespace": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "diffEditor.renderSideBySide": true,
  "editor.bracketPairColorization.enabled": false,
  "editor.fontFamily": "Fira Mono",
  "editor.fontSize": 17,
  "editor.insertSpaces": true,
  "editor.renderControlCharacters": false,
  "editor.suggestSelection": "first",
  "editor.wordWrap": "on",
  "explorer.fileNesting.enabled": false,
  "files.eol": "\n",
  "git.openRepositoryInParentFolders": "always",
  "update.mode": "none",
  "window.dialogStyle": "custom",
  "window.menuBarVisibility": "classic",
  "workbench.iconTheme": "material-icon-theme",
  // TERMINAL -----------------------------------------------------------------
  "debug.terminal.clearBeforeReusing": true,
  "terminal.integrated.enablePersistentSessions": false,
  "terminal.integrated.fontSize": 16,
  "terminal.integrated.persistentSessionReviveProcess": "never",
  "terminal.integrated.tabs.enabled": false,
  // INTELLISENSE -------------------------------------------------------------
  "editor.inlayHints.enabled": "off",
  "editor.inlineSuggest.enabled": true,
  "emmet.includeLanguages": { "javascript": "javascriptreact" },
  "github.copilot.enable": { "*": true, "yaml": true, "plaintext": true, "markdown": true },
  // SONARLINT ----------------------------------------------------------------
  "sonarlint.rules": {
    "javascript:S125": { "level": "off" },
    "python:S117": { "level": "off" },
    "python:S1542": { "level": "off" }
  },
  // JAVA ---------------------------------------------------------------------
  "files.exclude": { "**/.classpath": true, "**/.project": true, "**/.settings": true, "**/.factorypath": true },
  "java.configuration.updateBuildConfiguration": "automatic",
  "java.project.importOnFirstTimeStartup": "automatic",
  "java.saveActions.organizeImports": true,
  "microprofile.alwaysShowOverview": false,
  "quarkus.tools.alwaysShowWelcomePage": false,
  "redhat.telemetry.enabled": false,
  // JAVASCRIPT ---------------------------------------------------------------
  "javascript.updateImportsOnFileMove.enabled": "always",
  // PYTHON -------------------------------------------------------------------
  "python.defaultInterpreterPath": "/home/zbhavyai/.venv/PY-ENV/bin/python",
  "python.terminal.activateEnvironment": true,
  "python.venvFolders": ["/home/zbhavyai/.venv"],
  "workbench.editorAssociations": { "*.ipynb": "jupyter-notebook" },
  "notebook.cellToolbarLocation": { "default": "right", "jupyter-notebook": "right" },
  "notebook.compactView": false,
  "notebook.dragAndDropEnabled": false,
  "notebook.showFoldingControls": "always",
  // CONTAINER ----------------------------------------------------------------
  "dev.containers.dockerPath": "/usr/bin/docker",
  "dev.containers.dockerComposePath": "/usr/bin/docker-compose",
  "docker.dockerPath": "/usr/bin/docker",
  // GITLENS ------------------------------------------------------------------
  "gitlens.codeLens.enabled": false,
  // PRETTIER -----------------------------------------------------------------
  "prettier.jsxSingleQuote": true,
  "prettier.printWidth": 200,
  "prettier.singleQuote": true,
  "prettier.tabWidth": 2,
  // FORMATTING ---------------------------------------------------------------
  "[javascript]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[typescript]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[typescriptreact]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[html]": { "editor.defaultFormatter": "vscode.html-language-features" },
  "[css]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[json]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[jsonc]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[markdown]": { "editor.defaultFormatter": "esbenp.prettier-vscode", "editor.tabSize": 3 },
  "[python]": { "editor.defaultFormatter": "ms-python.black-formatter" },
  // OTHER --------------------------------------------------------------------
  "security.workspace.trust.enabled": false,
  "telemetry.telemetryLevel": "crash"
}
